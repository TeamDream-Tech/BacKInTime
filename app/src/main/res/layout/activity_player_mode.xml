<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play"
    tools:context=".PlayerMode">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fore">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="0dp"
        >



    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="60dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/shakingImage"
                    android:src="@drawable/tictaktoe">

                </de.hdodenhof.circleimageview.CircleImageView>

            </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
   android:padding="5dp"
    android:layout_height="wrap_content">
            </RelativeLayout>
            <RelativeLayout

                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regu"
                    android:text="BACK IN TIME"
                    android:id="@+id/backingin"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/UserName"
                    android:fontFamily="@font/buttontxt"
                    android:text="Welcome to Back in Time"
                    android:layout_below="@id/backingin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    />


            </RelativeLayout>


            <RelativeLayout

                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/thonking"
                    android:id="@+id/settings"
                    android:drawableLeft="@drawable/settings"
                    android:drawableStart="@drawable/settings"
                    android:drawablePadding="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Settings"

                    ></TextView>


            </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_gravity="bottom"
    android:padding="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">




</RelativeLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/fore"
    android:layout_marginTop="40dp"
    android:gravity="center"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        app:cardBackgroundColor="@color/grey"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardElevation="50dp"
        app:cardCornerRadius="40dp"
        >

    <LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"

        android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="wrap_content">

       <Button
           android:layout_width="250dp"
           android:background="@drawable/cover"
           android:textSize="22sp"
           android:fontFamily="@font/balo"
           android:textStyle="bold"
           android:id="@+id/playOnline"
           android:textColor="@color/colorAccent"
           android:textAlignment="center"
           android:text="Online\n Multiplayer"
           android:layout_height="70dp"></Button>

    <Button
        android:layout_width="250dp"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:fontFamily="@font/balo"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:text="1 PLAYER MODE"
        android:id="@+id/singlePlayer"
        android:background="@drawable/cover"
        android:layout_height="70dp"></Button>
    <Button
        android:layout_width="250dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/One_on_One"
        android:fontFamily="@font/balo"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:text="2 PLAYERS MODE"
        android:layout_marginTop="15dp"
        android:background="@drawable/cover"
        android:layout_height="70dp"></Button>

    <Button
        android:layout_width="250dp"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/Exit_Game"
        android:fontFamily="@font/balo"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:text="About Us "
        android:background="@drawable/cover"
        android:layout_height="70dp"></Button>
</LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Â© 2020 Venbrino Games Inc."
        android:layout_marginTop="370dp"
        android:textColor="@color/colorAccent"
        />

</RelativeLayout>