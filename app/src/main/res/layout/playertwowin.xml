<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_centerInParent="true"
      android:background="@android:color/transparent"
      android:padding="10dp"
      android:layout_height="wrap_content">

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/ticimage"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_marginLeft="10dp"
          android:src="@drawable/cokie"></de.hdodenhof.circleimageview.CircleImageView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_toRightOf="@id/ticimage"
          android:padding="10dp"
          android:text="Computer win!!!"
          android:id="@+id/playerTwoWins"
          android:textColor="@color/colorAccent"
          android:textStyle="bold"
          android:fontFamily="@font/buttontxt"
          android:textSize="28sp"
          android:layout_marginLeft="20dp"
          android:layout_height="wrap_content"></TextView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_below="@+id/ticimage"
          android:layout_centerHorizontal="true"
          android:padding="10dp"
          android:text="Start a new game"
          android:id="@+id/starta"
          android:textColor="@color/colorAccent"
          android:textStyle="bold"
           android:fontFamily="@font/buttontxt"
          android:textSize="28sp"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="30dp"
          android:layout_height="wrap_content"></TextView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_below="@+id/starta"
                 android:layout_marginTop="10dp"
          android:padding="20dp"
          android:id="@+id/menu"
          android:text="Menu"
          android:textColor="@color/colorAccent"
          android:textStyle="bold"
          android:fontFamily="@font/buttontxt"
          android:textSize="25sp"
          android:layout_marginLeft="30dp"
          android:layout_height="wrap_content"></TextView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_below="@+id/starta"
          android:layout_marginTop="20dp"
          android:padding="10dp"
          android:text="Continue"
          android:layout_toRightOf="@id/menu"
          android:textColor="@color/colorAccent"
          android:textStyle="bold"
          android:fontFamily="@font/buttontxt"
          android:id="@+id/continuegame"
          android:textSize="25sp"
          android:layout_marginLeft="50dp"
          android:layout_height="wrap_content"></TextView>
  </RelativeLayout>

  </RelativeLayout>

