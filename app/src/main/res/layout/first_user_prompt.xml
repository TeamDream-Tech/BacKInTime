<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="25dp"
    app:cardCornerRadius="30dp"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/colorAccent"
    android:layout_height="match_parent">




        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pin1"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_gravity="center"
            android:focusable="true"

            app:cardCornerRadius="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="25dp"
            android:layout_marginTop="0dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/headertextResetMessagin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorGreen"
                    android:fontFamily="@font/regu"
                    android:padding="10dp"
                    android:text="Welcome to Back in Time"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:padding="10dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/thonking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Enter any name of your chioce "
                    android:textAlignment="center"
                    android:layout_below="@id/headertextResetMessagin"
                    android:id="@+id/botText"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/botText"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:id="@+id/linearMessaging"
                    android:orientation="vertical"

                    >


                        <EditText
                            android:textCursorDrawable="@null"
                            android:id="@+id/DisplayName"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/black"
                            android:background="@drawable/rounded"
                            android:hint="Enter Your Name "
                            android:padding="5dp"
                            android:textColorHint="@color/black"
                            android:layout_centerHorizontal="true"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"/>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:text="Click me to Continue"
                    android:id="@+id/ClickMe"
                    android:textAlignment="center"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/balo"
                    android:textColor="@color/colorAccent"
                    android:background="@color/colorGreen"
                    android:layout_below="@id/linearMessaging"
                    />

            </RelativeLayout>



</androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>