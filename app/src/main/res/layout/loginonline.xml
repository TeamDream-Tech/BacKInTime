<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="25dp"
    app:cardCornerRadius="30dp"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_height="match_parent">




        <androidx.cardview.widget.CardView
            android:id="@+id/pin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_gravity="center"
            android:focusable="true"
             android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="25dp"
            android:layout_marginTop="0dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/headertextResetMessagin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorGreen"
                    android:fontFamily="@font/regu"
                    android:text="Please Register"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"
                    android:textStyle="bold" >
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/goback"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"
                    android:layout_height="wrap_content"></ImageView>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_below="@id/headertextResetMessagin"
                 android:layout_marginTop="5dp"

                 android:textSize="20sp"
                 android:id="@+id/info"
                 android:layout_centerHorizontal="true"
                 android:textStyle="bold"
                 android:textAlignment="center"
                 android:text="Enter your email and password for\nRegistration"
                 android:layout_height="wrap_content"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:id="@+id/linearMessaging"
                    android:orientation="vertical"

                    >


                        <EditText
                            android:textCursorDrawable="@null"
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/black"
                            android:background="@drawable/rounded"
                            android:hint="enter your mail "
                            android:padding="5dp"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/black"
                            android:layout_centerHorizontal="true"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"/>

                    <EditText
                        android:textCursorDrawable="@null"
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:background="@drawable/rounded"
                        android:hint="enter a strong password "
                        android:padding="5dp"
                        android:inputType="textPassword"
                        android:textColorHint="@color/black"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"/>
                </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:text="Click me to Continue"
                    android:id="@+id/continueLogin"
                    android:textAlignment="center"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/balo"
                    android:textColor="@color/colorAccent"
                    android:background="@color/colorGreen"
                    android:layout_below="@id/linearMessaging"
                    />

            </RelativeLayout>



</androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>