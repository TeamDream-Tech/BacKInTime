<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="25dp"
    app:cardCornerRadius="30dp"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/pin1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:clickable="false"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="30dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="25dp"

        android:layout_gravity="center"
        android:layout_marginTop="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:paddingBottom="2dp">
    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="BACK IN TIME"
        android:layout_marginTop="10dp"
        android:id="@+id/name"
       android:layout_below="@id/real"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:fontFamily="@font/regu"
      android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/cancle_button"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_cancel_black_24dp"></ImageView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/vline"
                android:layout_marginStart="20dp"
                android:layout_below="@id/name"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="20dp"
                android:background="@color/black" />

            <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/name"
    android:layout_marginTop="5dp"
                android:id="@+id/ven"
                android:textColor="@color/black"
    android:textSize="16sp"
    android:layout_centerHorizontal="true"
    android:text="version 1.0.0"
    ></TextView>
<RelativeLayout
    android:layout_width="wrap_content"
    android:id="@+id/real"
    android:layout_marginTop="3dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/shakingIe"
                    android:layout_centerInParent="true"
                    android:src="@drawable/tictaktoe" />

</RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:text="Â© 2020 Venbrino Games Inc."
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/ven"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:fontFamily="@font/thonking"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:text="Developed By Venbrino Games inc"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                      android:id="@+id/rate_us"
                    android:layout_marginTop="25dp"
                    android:text="Rate_Us"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/terms_"
                    android:layout_marginTop="10dp"
                    android:text="Terms And Services"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/email_contact"
                    android:text="contact_us: preciouify3@gmail.com"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/phone"
                    android:text="Phone_us: 09066269233"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"></TextView>

            </LinearLayout>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>