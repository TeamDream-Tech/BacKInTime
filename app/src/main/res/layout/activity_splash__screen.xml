<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Splash_Screen">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Back In Time"
                    android:id="@+id/backInTime"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/regu"
                    ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backInTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:id="@+id/splashTictack"
        android:fontFamily="@font/buttontxt"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:text="(Tic Tac Toe)"
        ></TextView>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_above="@id/ven"
        android:layout_margin="30dp"
        android:indeterminate="true"
        android:indeterminateDuration="3500"
       style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"></ProgressBar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Venbrino Games"
        android:id="@+id/ven"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"></TextView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/tictaktoe"
            android:id="@+id/rotating"
            android:layout_below="@id/splashTictack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            ></de.hdodenhof.circleimageview.CircleImageView>







</RelativeLayout>