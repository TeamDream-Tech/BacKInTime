<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="370dp"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/img"
          >

            <TextView
                android:id="@+id/headertextResetMessagin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regu"
                android:padding="10dp"
                android:background="@drawable/rounded"
                android:text="Game Level"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/headertextResetMessagin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:id="@+id/winHard"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:text="Win Hard level and get a price"
                android:layout_height="wrap_content"></TextView>


            <Button
                android:id="@+id/easy"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:fontFamily="@font/level"
                android:background="@drawable/rounded"
                android:layout_below="@id/winHard"
                android:layout_marginTop="20dp"
                android:text="Easy"></Button>

            <Button
                android:id="@+id/normal"
                android:layout_width="220dp"
                android:layout_below="@id/easy"
                android:layout_marginTop="15dp"
                android:text="Normal"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/level"
                android:background="@drawable/rounded"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp"></Button>
            <Button
                android:id="@+id/hard"
                android:layout_width="220dp"
                android:layout_below="@id/normal"
                android:textColor="@color/black"
                android:fontFamily="@font/level"
                android:background="@drawable/rounded"
                android:layout_marginTop="15dp"
                android:text="Hard"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp"></Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@id/hard"
                android:layout_marginTop="25dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:text="Â© 2020 Venbrino Games Inc."
                ></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/cancle_button"
               android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_cancel_black_24dp"></ImageView>
        </RelativeLayout>



</RelativeLayout>